{
    "manifest_version": 3,
    "name": "Speed Tube",
    "description": "Starts YouTube videos, sets default playback speed, ctrl + left/right arrows to decrease/increase speed",
    "version": "1.0",
    "icons" : {},
    "content_scripts": [
        {
            "js": [
                "/src/script.js"
            ],
            "matches": [
                "https://www.youtube.com/*"
            ],
            "css": [
                "src/styles.css"
            ]
        }
    ]
}